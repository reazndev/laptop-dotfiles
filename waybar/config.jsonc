{
  "reload_style_on_change": true,
  "layer": "top",
  "position": "top",
  "spacing": 0,
  "height": 28,
  "modules-left": [
    "custom/logo"
  ],
  "modules-center": [
    "sway/workspaces",
    "sway/mode"
  ],
  "modules-right": [
    "group/tray-expander",
    "network",
    "backlight",
    "pulseaudio",
